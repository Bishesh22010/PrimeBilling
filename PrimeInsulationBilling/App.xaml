<Application x:Class="PrimeInsulationBilling.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PrimeInsulationBilling"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="Views/LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 
                This is the main resource that loads the Material Design theme provider.
                You can change the BaseTheme (Light/Dark) and the Primary/Secondary colors here.
                -->
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Amber" />

                <!-- 
                This resource loads the default styles for all standard WPF controls
                like Buttons, TextBoxes, ComboBoxes, etc., making them look like Material Design controls.
                -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
