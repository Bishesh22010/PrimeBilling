<Window x:Class="PrimeInsulationBilling.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prime Insulation Billing" Height="900" Width="900"
        WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="850"
        Background="#F4F7FC" WindowStyle="SingleBorderWindow" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Left Column: Branding and Navigation -->
        <Border Grid.Column="0" Background="#0D2C54" Padding="20">
            <StackPanel>
                <TextBlock Text="PRIME" Foreground="White" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="INSULATION" Foreground="#7E9EC2" FontSize="22" FontWeight="Light" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                <Separator Background="#335074" Margin="0,20,0,20"/>
                <TextBlock Text="Billing Software" Foreground="#5A799E" FontSize="16" HorizontalAlignment="Center" FontStyle="Italic"/>
            </StackPanel>
        </Border>

        <!-- Right Column: Main Content and Form -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Create New Bill" Grid.Row="0"
                       FontSize="32" FontWeight="SemiBold" Foreground="#1A3C6E" Margin="0,20,0,20"/>

            <!-- Main Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
                <StackPanel>
                    <!-- Template Selection -->
                    <GroupBox Header="Select Bill Template" Foreground="#1A3C6E" Margin="0,0,0,20">
                        <ComboBox x:Name="cmbTemplates" Padding="8" FontSize="14" Width="300" VerticalAlignment="Center" SelectionChanged="cmbTemplates_SelectionChanged">
                            <ComboBoxItem IsEnabled="False">Choose a template...</ComboBoxItem>
                        </ComboBox>
                    </GroupBox>

                    <!-- Header & Transport Details Group -->
                    <GroupBox Header="Invoice &amp; Transport Details" Foreground="#1A3C6E" Margin="0,0,0,20">
                        <StackPanel>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Invoice Number" Foreground="#666666" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtInvoiceNumber" Padding="8" ToolTip="Enter the invoice number" BorderBrush="#007ACC" MaxWidth="400" Grid.Column="1"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Invoice Date" Foreground="#666666" VerticalAlignment="Center"/>
                                <DatePicker x:Name="dpInvoiceDate" Padding="6" ToolTip="Select the invoice date" BorderBrush="#007ACC" MaxWidth="400" Grid.Column="1"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="E-Way Bill Number" Foreground="#666666" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtEWayBill" Padding="8" ToolTip="Enter the E-Way bill number" BorderBrush="#007ACC" MaxWidth="400" Grid.Column="1"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="LR Number" Foreground="#666666" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtLrNumber" Padding="8" ToolTip="Enter the LR number" BorderBrush="#007ACC" MaxWidth="400" Grid.Column="1"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Vehicle Number" Foreground="#666666" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtVehicleNo" Padding="8" ToolTip="Enter the vehicle number" BorderBrush="#007ACC" MaxWidth="400" Grid.Column="1"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>

                    <!-- Item & Financial Details Group -->
                    <GroupBox Header="Item &amp; Financial Details" Foreground="#1A3C6E" Margin="0,0,0,20">
                        <StackPanel>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Description of Goods" Foreground="#666666" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtDescription" Padding="8" Height="50" AcceptsReturn="True" ToolTip="Enter description of goods" BorderBrush="#007ACC" MaxWidth="400" Grid.Column="1"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="HSN Code" Foreground="#666666" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtHsnCode" Padding="8" ToolTip="Enter HSN code" BorderBrush="#007ACC" MaxWidth="400" Grid.Column="1"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Quantity" Foreground="#666666" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtQuantity" Padding="8" ToolTip="Enter quantity" BorderBrush="#007ACC" MaxWidth="400" Grid.Column="1"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Rate" Foreground="#666666" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtRate" Padding="8" ToolTip="Enter rate" BorderBrush="#007ACC" MaxWidth="400" Grid.Column="1"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Packing Details (4 Lines)" Foreground="#666666" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1">
                                    <TextBox x:Name="txtPacking1" Padding="8" Margin="0,0,0,2" ToolTip="Packing Line 1" BorderBrush="#007ACC" MaxWidth="400"/>
                                    <TextBox x:Name="txtPacking2" Padding="8" Margin="0,2" ToolTip="Packing Line 2" BorderBrush="#007ACC" MaxWidth="400"/>
                                    <TextBox x:Name="txtPacking3" Padding="8" Margin="0,2" ToolTip="Packing Line 3" BorderBrush="#007ACC" MaxWidth="400"/>
                                    <TextBox x:Name="txtPacking4" Padding="8" Margin="0,2,0,0" ToolTip="Packing Line 4" BorderBrush="#007ACC" MaxWidth="400"/>
                                </StackPanel>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Amount" Foreground="#666666" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtAmount" Padding="8" ToolTip="Enter total amount" BorderBrush="#007ACC" MaxWidth="400" Grid.Column="1"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Amount in Words" Foreground="#666666" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtAmountInWords" Padding="8" Height="50" AcceptsReturn="True" ToolTip="This is generated automatically from the R/OFF amount" BorderBrush="#007ACC" MaxWidth="400" Grid.Column="1" IsReadOnly="True" Background="#EEEEEE"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Taxes &amp; Final Total" Foreground="#666666" VerticalAlignment="Center"/>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="txtCgst" Padding="8" ToolTip="CGST" BorderBrush="#007ACC" />
                                    <TextBox x:Name="txtSgst" Padding="8" ToolTip="SGST" BorderBrush="#007ACC" Grid.Column="2"/>
                                    <TextBox x:Name="txtIgst" Padding="8" ToolTip="IGST" BorderBrush="#007ACC" Grid.Column="4"/>
                                    <TextBox x:Name="txtRoff" Padding="8" ToolTip="R/OFF" BorderBrush="#007ACC" MaxWidth="100" Grid.Column="6" LostFocus="txtRoff_LostFocus"/>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Button and Status Bar -->
            <Border Grid.Row="2" Padding="20" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StatusBar Grid.Column="0" Background="Transparent">
                        <StatusBarItem>
                            <TextBlock x:Name="lblStatus" Text="Ready" Foreground="#666666"/>
                        </StatusBarItem>
                    </StatusBar>
                    <Button x:Name="GenerateBillButton" Content="GENERATE AND OPEN BILL" 
                            Grid.Column="1" Background="#007ACC" Foreground="White" 
                            FontSize="16" FontWeight="Bold" Padding="20,10" BorderThickness="0"
                            Click="GenerateBillButton_Click" Cursor="Hand"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

