<Window x:Class="PrimeInsulationBilling.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prime Insulation Billing - Login" Height="500" Width="380"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D0D0D0"/>

        <Style x:Key="ProfessionalButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" Background="{StaticResource LightGrayBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
        </Border.Effect>

        <Grid>
            <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"
                    Width="30" Height="30" Foreground="{StaticResource DarkTextBrush}"
                    Background="Transparent" BorderThickness="0" FontSize="16" FontWeight="Bold"
                    Click="CloseButton_Click"/>

            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="PRIME INSULATION"
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryBlueBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,30" TextWrapping="Wrap"/>

                <TextBlock Text="Username" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}" Margin="0,10,0,5"/>
                <TextBox x:Name="txtUsername" Padding="8" FontSize="16" BorderBrush="{StaticResource BorderBrush}"/>

                <TextBlock Text="Password" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}" Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtPassword" Padding="8" FontSize="16" BorderBrush="{StaticResource BorderBrush}"/>

                <Button Content="LOGIN"
                        x:Name="LoginButton"
                        Style="{StaticResource ProfessionalButton}"
                        Margin="0,30,0,0" Height="45"
                        Click="LoginButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>