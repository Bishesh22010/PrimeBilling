<Window x:Class="PrimeInsulationBilling.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prime Insulation Billing" Height="720" Width="600"
        WindowStartupLocation="CenterScreen" MinWidth="550" MinHeight="650"
        Background="#F4F7FC">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="GrayTextBrush" Color="#666666"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D0D0D0"/>

        <Style x:Key="ProfessionalButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="White" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,0,0,1">
                                <TextBlock Text="{TemplateBinding Header}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource PrimaryBlueBrush}" Margin="10"/>
                            </Border>
                            <Border Grid.Row="1" Background="White">
                                <ContentPresenter Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="FieldLabel">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource GrayTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create New Bill" Grid.Row="0"
                   FontSize="28" FontWeight="Light" Foreground="{StaticResource DarkTextBrush}" Margin="20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <StackPanel>
                <TextBlock Text="Select Bill Template" Style="{StaticResource FieldLabel}"/>
                <ComboBox x:Name="cmbTemplates" Padding="8" FontSize="14" Margin="0,0,0,20"/>

                <GroupBox Header="Invoice Details">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Invoice Number" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtInvoiceNumber" Padding="8"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Invoice Date" Style="{StaticResource FieldLabel}"/>
                            <DatePicker x:Name="dpInvoiceDate" Padding="6"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Transport Details">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="E-Way Bill Number" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtEWayBill" Padding="8"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Vehicle Number" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtVehicleNo" Padding="8"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Financials">
                    <StackPanel>
                        <TextBlock Text="Total Amount (₹)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="txtTotalAmount" Padding="8"/>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Padding="20" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StatusBar Grid.Column="0" Background="White">
                    <StatusBarItem>
                        <TextBlock x:Name="lblStatus" Text="Ready" Foreground="{StaticResource GrayTextBrush}"/>
                    </StatusBarItem>
                </StatusBar>
                <Button x:Name="GenerateBillButton" Content="GENERATE AND OPEN BILL" 
                        Grid.Column="1" Style="{StaticResource ProfessionalButton}"
                        Click="GenerateBillButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>